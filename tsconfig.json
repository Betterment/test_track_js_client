{
  "include": ["src/*.ts", "types"],
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "types": ["vitest/globals"],
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "pretty": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "esModuleInterop": true
  }
}
